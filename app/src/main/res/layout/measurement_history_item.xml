<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creationDateTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"

            android:gravity="center"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/waterTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/fatTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"

            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/fatControlTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"

            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/fatLevelTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:text="30Cm"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/smmTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/weightTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"

            android:gravity="center"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/targetWeightTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp" />


        <TextView
            android:id="@+id/weightControlTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp" />


        <TextView
            android:id="@+id/muscleControlTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp" />
        <TextView
            android:id="@+id/rateTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp" />
        <TextView
            android:id="@+id/hipTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/editTV"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="Edit"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/editImgV"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_edit"
            android:visibility="gone"
            android:tint="@color/colorPrimary"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />
</LinearLayout>