<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rect_sharp_corner_white_with_gray_border"
    android:layout_width="wrap_content"
    android:padding="@dimen/_2sdp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="@dimen/_30sdp">


    <ImageView
        android:id="@+id/classTrainingImgV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_4sdp"
        android:scaleType="fitXY"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintHorizontal_bias=".02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_running" />


    <TextView
        android:id="@+id/trainTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent=".3"
        app:layout_constraintWidth_percent=".5"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Sprining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginBottom="@dimen/_4sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/classTrainingImgV"
        app:layout_constraintStart_toEndOf="@+id/classTrainingImgV"
        app:layout_constraintTop_toTopOf="@id/classTrainingImgV" />


</androidx.constraintlayout.widget.ConstraintLayout>