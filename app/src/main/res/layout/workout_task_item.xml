<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipeRevealLayout"
    android:elevation="@dimen/_4sdp"
    android:padding="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:layout_marginStart="@dimen/_15sdp"
    app:mode="same_level"
    app:dragEdge="left"
    android:background="@drawable/rect_sharp_corner_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/minNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many minutes?"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/rect_sharp_corner_off_white"
            app:layout_constraintTop_toBottomOf="@id/minNumberLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="-"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="center"
                android:textColor="@color/orange_dark"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"/>


            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="+"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"/>

        </LinearLayout>


        <TextView
            android:id="@+id/calaroiesNumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories burned?"
            android:textColor="@android:color/black"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/minNumberLabel"/>

        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/rect_sharp_corner_off_white"
            app:layout_constraintTop_toBottomOf="@id/calaroiesNumLabel"
            app:layout_constraintStart_toStartOf="@id/calaroiesNumLabel"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="-"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="center"
                android:textColor="@color/orange_dark"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"/>


            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="+"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@android:color/darker_gray"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/calaroiesNumLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_virifaction"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/foregroundCL">

        <ImageView
            android:id="@+id/sportsRunningImgV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_sports_running"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Walk"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintHorizontal_bias=".2"
            app:layout_constraintTop_toTopOf="@id/sportsRunningImgV"
            app:layout_constraintStart_toEndOf="@id/sportsRunningImgV"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 mins â€¢ Mid-Speed"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@id/text1"
            app:layout_constraintTop_toBottomOf="@id/text1"/>

        <ImageView
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            app:srcCompat="@drawable/ic_left_arrow"
            android:scaleX="-1"
            android:layout_marginEnd="@dimen/_10sdp"
            android:tint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>